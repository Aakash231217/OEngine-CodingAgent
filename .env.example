# Database Configuration
# PostgreSQL connection string with pgvector extension
DATABASE_URL="postgresql://username:password@localhost:5432/gitosys_worker"

# Redis Configuration
# Redis connection URL for job queue
REDIS_URL="redis://localhost:6379"

# AI API Keys
# OpenAI API key for embeddings and code analysis
OPENAI_API_KEY="your-openai-api-key-here"

# Anthropic API key for Claude models (optional but recommended)
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Server Configuration
# Port for health check server (default: 3001)
PORT=3001

# Environment
# Node environment (development, production, test)
NODE_ENV=development

# Optional: Logging
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Optional: Performance
# Maximum concurrent jobs (default: 5)
MAX_CONCURRENT_JOBS=5

# Optional: AI Model Configuration
# Default OpenAI model for embeddings
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"

